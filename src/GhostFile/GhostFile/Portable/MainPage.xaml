<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GhostFile.Portable.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout>
            <Label x:Name="LinkOutput"
                   Text="Link" />
            <Label x:Name="KeyOutput"
                   Text="Key" />
            <Label x:Name="ExpiryOutput"
                   Text="Expiry" />

            <Label x:Name="ErrorOutput"
                   Text="Error" />
            <Label x:Name="MessageOutput"
                   Text="Message" />
        </StackLayout>

        <Button Text="Upload File"
                CornerRadius="10"
                HorizontalOptions="Fill"
                HeightRequest="80"
                Margin="5"
                Grid.Row="1"
                Clicked="UploadButton_OnClick" />
    </Grid>
</ContentPage>
